<!-- Call to Action Section -->
<section id="signup" class="section-padding gradient-primary">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-display text-3xl md:text-5xl text-white mb-6">
      Stay in the Loop
    </h2>

    <p class="font-primary text-xl text-white/90 mb-12 max-w-2xl mx-auto">
      Get the latest news about Bridge's development and be the first to know
      when we launch
    </p>

    <div class="max-w-md mx-auto mb-8">
      <form
        action="/register_email"
        method="POST"
        class="flex flex-col sm:flex-row gap-4"
      >
        <input
          type="hidden"
          name="_csrf_token"
          value="{Phoenix.HTML.Form.csrf_token()}"
        />
        <input
          type="email"
          name="email"
          placeholder="Enter your email address"
          class="flex-1 px-6 py-4 rounded-xl border-0 font-primary text-primary bg-white/95 backdrop-blur-sm placeholder-gray-500 focus:ring-2 focus:ring-white focus:bg-white transition-all"
          required
        />
        <button
          type="submit"
          class="bg-white text-violet font-primary font-semibold px-8 py-4 rounded-xl hover:bg-gray-50 transition-all hover:scale-105 shadow-large cursor-pointer"
        >
          Subscribe
        </button>
      </form>
    </div>
  </div>
</section>

