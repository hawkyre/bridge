<!-- Call to Action Section -->
<section
  id="signup"
  class="section-padding bg-gradient-to-br from-primary to-primary-darker"
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="mb-6 text-white">Stay in the Loop</h2>

    <p class="text-xl text-white/90 mb-12 max-w-2xl mx-auto">
      Get the latest news about Bridge's development and be the first to know
      when we launch
    </p>

    <div class="max-w-md mx-auto mb-8">
      <form
        action="/register_email"
        method="POST"
        class="flex flex-col sm:flex-row gap-4"
      >
        <input
          type="hidden"
          name="_csrf_token"
          value={Phoenix.Controller.get_csrf_token()}
        />
        <input
          type="email"
          name="email"
          placeholder="Enter your email address"
          class="flex-1 px-6 py-4 rounded-xl border-0 bg-white/95 backdrop-blur-sm placeholder-gray-500 focus:ring-2 focus:ring-white focus:bg-white transition-all"
          required
        />
        <button
          type="submit"
          class="bg-white text-violet font-semibold px-8 py-4 rounded-xl hover:bg-gray-50 transition-all hover:scale-105 shadow-large cursor-pointer"
        >
          Subscribe
        </button>
      </form>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="bg-gray-900 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="flex items-center justify-center mb-4">
      <span class="font-display text-xl text-white">Bridge</span>
    </div>
    <p class="text-gray-400">
      Building bridges between languages, cultures, and communities, one learner
      at a time.
    </p>
  </div>
</footer>
